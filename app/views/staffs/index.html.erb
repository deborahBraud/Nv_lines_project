<h1>Teams and Facilities</h1> 
<hr> </br>

<table class="table table-bordered">
  <thead class="header" bgcolor="F8F9FA">
    <tr>
      <th>Name</th>
      <th>Header</th>
      <th>Adress</th>
      <th>Team / Facility </th>
      <th>Institut name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @staffs.each do |staff| %>
      <tr>
       <td><%= staff.staff_name %></td>
        <td><%= staff.staff_header %></td>
        <td><%= staff.staff_adress %>
            <%= staff.postalcode %>
            <%= staff.city %>
            <%= staff.country %></td>
        <td><%= staff.staff_type %></td>
        <td><%= staff.institut_name %></td>
        <td><%= link_to 'Show', staff, class: 'btn btn-outline-secondary btn-sm'  %></td>

        <% if user_signed_in?%>
            <td><%= link_to 'Edit', edit_staff_path(staff), class: 'btn btn-outline-secondary btn-sm' %></td>
            <td><%= link_to 'Delete', staff, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

</br>

<% if user_signed_in?%>
  <%= link_to 'Add a new team or facility', new_staff_path, class:'btn btn-light' %>
<% else %>
  <p> To add a new team or facility, please <%= link_to "login",new_user_session_path, class:"link" %> </p>
<% end %>  