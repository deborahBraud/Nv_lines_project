<div class="container">
  <div class="row">

    <div class="col-sm">
      <h1>Teams and Facilities</h1>
    </div>

    <div class="col-sm">
    </div>
    <div class="col-sm">
    </div>

    <div class="col-sm">
    <%= link_to new_staff_path do %>
      <%= image_tag "add.png", :size => '30x30', :alt => "Image", :class => "img-fluid tm-header-img", :title => "Add a new team or facility" %>
    <% end %>
    </div>
  </div>
</div>    

<hr>
</br>

<table class="table table-bordered">
  <thead class="header" bgcolor="F8F9FA">
    <tr>
      <th>Lab Name</th>
      <th>Topic</th>
      <th>Website</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @staffs.each do |staff| %>
      <tr>
       <td><%= link_to staff.staff_name, staff %></td>
       <td><%= staff.topic %></td>
       <td><%= link_to "Click here", staff.url, target: :blank%></td>
       <td><%= staff.institut_name %></td>

       <% if user_signed_in?%>
          <td><%= link_to 'Edit', edit_staff_path(staff), class: 'btn btn-outline-secondary btn-sm' %></td>
          <td><%= link_to 'Delete', staff, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
       <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

</br>

<% if user_signed_in?%>
  <%= link_to 'Add a new team or facility', new_staff_path, class:'btn btn-light' %>
<% else %>
  <p> To add a new team or facility, please <%= link_to "login",new_user_session_path, class:"link" %> </p>
<% end %>  