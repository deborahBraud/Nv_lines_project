<%= form_with(model: publication) do |form| %>
  <% if publication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
        <% publication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    Please enter the PUBMED accession number of the publication :
    <input type="text" name="ids" />
  </div>

  </br>
  <div class="field form-group">
    <%= form.label :line_name %>
    <%= form.collection_check_boxes(:line_ids, Line.all, :id, :line_name) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "check_box") %>
            <%= b.object.line_name %>
          </div>       
        <% end %>
      </div>
    <% end %>  
  </div>

  </br>
  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>
