<h1>Genetic Modification Methods</h1>

<div class="table-responsive"> </br>
  <table class="table table-bordered table-responsive">
    <thead class="header" bgcolor="F8F9FA">
      <tr>
        <th> ID </th>
        <th>Associated line name </th>
        <th>Tag type</th>
        <th>Molecular tools</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @genetic_modification_methods.each do |genetic_modification_method| %>
        <tr> 
          <td><%= genetic_modification_method.id %></td>
          <td>
            <% if genetic_modification_method.line %>
               <%= genetic_modification_method.line.line_name %> <%= genetic_modification_method.line.generation %> 
            <% end %>
          </td>  
          <td><%= genetic_modification_method.tag_type %></td>
          <td><%= genetic_modification_method.molecular_tools %></td>
          <td><%= link_to 'Show more', genetic_modification_method, class:'btn btn-outline-secondary btn-sm' %></td>

          <% if user_signed_in?%> 
            <td><%= link_to 'Edit', edit_genetic_modification_method_path(genetic_modification_method), class:'btn btn-outline-secondary btn-sm' %></td>
            <td><%= link_to 'Destroy', genetic_modification_method, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-outline-danger btn-sm' %></td>
          <%else%>
          <%end%>  
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Add Methods Background', new_genetic_modification_method_path, class:'btn btn-light' %>
